{
  "compilerOptions": {
    "baseUrl": "./src",

    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist/src",
    "skipLibCheck": true,
    "lib": ["es2020"],

    "strict": true,
    "noImplicitAny": false,

    "paths": {
      "@models/*": [ "models/*" ],
      "@services/*": [ "services/*" ],
      "@errors/*": [ "errors/*" ],
      "@enums/*": [ "enums/*" ],
      "@constants": [ "Constants" ]
    }
  }
}
